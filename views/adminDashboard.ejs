<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Administrativo</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            display: flex;
            height: 100vh;
            background-color: #f4f4f4;
        }

       
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        .header {
            background: #007bff;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
        }

       
        .search-box {
            text-align: center;
            margin: 20px 0;
        }

        .search-box input {
            width: 60%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .search-box button {
            padding: 10px 15px;
            border: none;
            background: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 5px;
        }

        .search-box button:hover {
            background: #0056b3;
        }

      
        .user-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .user-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .user-card p {
            margin-bottom: 8px;
        }

        .user-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }

        .delete-btn {
            background: red;
            padding: 8px 15px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .edit-btn {
            background: #007bff;
            padding: 8px 15px;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-250px);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .close-btn {
                display: block;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>

<body>
   
    <div class="main-content">
     
      
        <div class="search-box">
            <form action="/search" method="GET">
                <input type="text" name="search" placeholder="Pesquisar usuário">
                <button type="submit">Buscar</button>
            </form>
        </div>

    
      <div class="user-list">
    <% 
        // ADM
        users.filter(u => u.isAdm).forEach(user => { 
    %>
        <div class="user-card">
        <p style="color: blue"><strong>Cargo:</strong> Administrativo</p>
            <p><strong>Usuário:</strong> <%= user.username %></p>
            <p><strong>Saldo:</strong> <%= user.saldo %></p>
            <p><strong>Level:</strong> <%= user.level %></p>
            <p><strong>ADM:</strong> <%= user.isAdm ? 'Sim' : 'Não' %></p>
            <p><strong>Premium:</strong> <%= user.isPremium ? 'Sim' : 'Não' %></p>
            <p><strong>Gold:</strong> <%= user.isGold ? 'Sim' : 'Não' %></p>
            <p><strong>Banido:</strong> <%= user.isBanido ? 'Sim' : 'Não' %></p>
            <div class="user-actions">
                <button class="delete-btn" onclick="confirmDelete('<%= user.username %>')">Deletar</button>
                <a href="/editar/<%= user.username %>">
                    <button class="edit-btn">Editar</button>
                </a>
            </div>
        </div>
    <% }) %>

    <% 
        // GOLD
        users.filter(u => !u.isAdm && u.isGold).forEach(user => { 
    %>
      <div class="user-card">
      <p style="color: gold"><strong>Plano:</strong> Gold</p>
            <p><strong>Usuário:</strong> <%= user.username %></p>
            <p><strong>Saldo:</strong> <%= user.saldo %></p>
            <p><strong>Level:</strong> <%= user.level %></p>
            <p><strong>ADM:</strong> <%= user.isAdm ? 'Sim' : 'Não' %></p>
            <p><strong>Premium:</strong> <%= user.isPremium ? 'Sim' : 'Não' %></p>
            <p><strong>Gold:</strong> <%= user.isGold ? 'Sim' : 'Não' %></p>
            <p><strong>Banido:</strong> <%= user.isBanido ? 'Sim' : 'Não' %></p>
            <div class="user-actions">
                <button class="delete-btn" onclick="confirmDelete('<%= user.username %>')">Deletar</button>
                <a href="/editar/<%= user.username %>">
                    <button class="edit-btn">Editar</button>
                </a>
            </div>
        </div>
    <% }) %>

    <% 
        // PREMIUM
        users.filter(u => !u.isAdm && !u.isGold && u.isPremium).forEach(user => { 
    %>
       <div class="user-card">
       <p style="color: #7BE9F2"><strong>Plano:</strong> Premium</p>
            <p><strong>Usuário:</strong> <%= user.username %></p>
            <p><strong>Saldo:</strong> <%= user.saldo %></p>
            <p><strong>Level:</strong> <%= user.level %></p>
            <p><strong>ADM:</strong> <%= user.isAdm ? 'Sim' : 'Não' %></p>
            <p><strong>Premium:</strong> <%= user.isPremium ? 'Sim' : 'Não' %></p>
            <p><strong>Gold:</strong> <%= user.isGold ? 'Sim' : 'Não' %></p>
            <p><strong>Banido:</strong> <%= user.isBanido ? 'Sim' : 'Não' %></p>
            <div class="user-actions">
                <button class="delete-btn" onclick="confirmDelete('<%= user.username %>')">Deletar</button>
                <a href="/editar/<%= user.username %>">
                    <button class="edit-btn">Editar</button>
                </a>
            </div>
        </div>
    <% }) %>

    <% 
        // LITE
        users.filter(u => !u.isAdm && !u.isGold && !u.isPremium && u.isLite).forEach(user => { 
    %>
       <div class="user-card">
       <p style="color: pink"><strong>Plano:</strong> Lite</p>
            <p><strong>Usuário:</strong> <%= user.username %></p>
            <p><strong>Saldo:</strong> <%= user.saldo %></p>
            <p><strong>Level:</strong> <%= user.level %></p>
            <p><strong>ADM:</strong> <%= user.isAdm ? 'Sim' : 'Não' %></p>
            <p><strong>Premium:</strong> <%= user.isPremium ? 'Sim' : 'Não' %></p>
            <p><strong>Gold:</strong> <%= user.isGold ? 'Sim' : 'Não' %></p>
            <p><strong>Banido:</strong> <%= user.isBanido ? 'Sim' : 'Não' %></p>
            <div class="user-actions">
                <button class="delete-btn" onclick="confirmDelete('<%= user.username %>')">Deletar</button>
                <a href="/editar/<%= user.username %>">
                    <button class="edit-btn">Editar</button>
                </a>
            </div>
        </div>
    <% }) %>

    <% 
        // FREE (sem nenhuma categoria)
        users.filter(u => !u.isAdm && !u.isGold && !u.isPremium && u.level !== 'lite').forEach(user => { 
    %>
       <div class="user-card">
       <p style="color: #b2b1b6"><strong>Plano:</strong> Free</p>
            <p><strong>Usuário:</strong> <%= user.username %></p>
            <p><strong>Saldo:</strong> <%= user.saldo %></p>
            <p><strong>Level:</strong> <%= user.level %></p>
            <p><strong>ADM:</strong> <%= user.isAdm ? 'Sim' : 'Não' %></p>
            <p><strong>Premium:</strong> <%= user.isPremium ? 'Sim' : 'Não' %></p>
            <p><strong>Gold:</strong> <%= user.isGold ? 'Sim' : 'Não' %></p>
            <p><strong>Banido:</strong> <%= user.isBanido ? 'Sim' : 'Não' %></p>
            <div class="user-actions">
                <button class="delete-btn" onclick="confirmDelete('<%= user.username %>')">Deletar</button>
                <a href="/editar/<%= user.username %>">
                    <button class="edit-btn">Editar</button>
                </a>
            </div>
        </div>
    <% }) %>
</div>

    <script>
        function confirmDelete(username) {
            if (confirm('Tem certeza que deseja deletar este usuário?')) {
                window.location.href = '/deletar/' + username;
            }
        }

        function toggleMenu() {
            document.getElementById('sidebar').classList.toggle('show');
        }
    </script>

</body>

</html>